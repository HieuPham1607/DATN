@model WebBanGiayAdidas.Models.Contact

@{
    ViewData["Title"] = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Link CSS -->
<link rel="stylesheet" type="text/css" href="~/assets/styles/main_styles.css" />
<link rel="stylesheet" type="text/css" href="~/assets/styles/contact_styles.css" />
<link rel="stylesheet" type="text/css" href="~/assets/styles/contact_responsive.css" />

<div class="container contact_container">
    <div class="row">
        <div class="col">
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li class="active"><a href="#"><i class="fa fa-angle-right" aria-hidden="true"></i>Contact</a></li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Google Map -->
    <div class="row">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3725.736677397609!2d105.76154267529927!3d20.963087280669825!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x313454cabc683f57%3A0xdb02223a0620af21!2zxJDhuqFpIGjhu41jIE5ndXnhu4VuIFRyw6Np!5e0!3m2!1svi!2s!4v1747365494500!5m2!1svi!2s" style="border:0; width:100%; height:600px; margin-bottom:30px" allowfullscreen loading="lazy"></iframe>
    </div>

    <!-- Contact Content -->
    <div class="row">
        <div class="col-lg-6 contact_col">
            <div class="contact_contents">
                <h1>Contact Us</h1>
                <p>There are many ways to contact us...</p>
                <div><p>(800) 686-6688</p><p>info.deercreative@gmail.com</p></div>
                <div><p>mm</p></div>
                <div><p>Open hours: 8.00-18.00 Mon-Fri</p><p>Sunday: Closed</p></div>
            </div>

            <div class="follow_us_contents">
                <h1>Follow Us</h1>
                <ul class="social d-flex flex-row">
                    <li><a href="#" style="background-color: #3a61c9"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#" style="background-color: #41a1f6"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#" style="background-color: #fb4343"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#" style="background-color: #8f6247"><i class="fa fa-instagram"></i></a></li>
                </ul>
            </div>
        </div>

        <div class="col-lg-6 get_in_touch_col">
            <div class="get_in_touch_contents">
                <h1>Get In Touch With Us!</h1>
                <p>Fill out the form below...</p>

                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="Name" class="form_input input_name input_ph" placeholder="Name" required />
                    <input asp-for="Email" class="form_input input_email input_ph" placeholder="Email" required />
                    <input asp-for="Website" class="form_input input_website input_ph" placeholder="Website" required />
                    <textarea asp-for="Message" class="input_ph input_message" placeholder="Message" rows="3" required></textarea>

                    <div>
                        <button type="submit" class="red_button message_submit_btn trans_300">Send Message</button>
                    </div>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-success mt-3">@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/contact_custom.js"></script>
    <script src="~/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
