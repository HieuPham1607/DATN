@model IEnumerable<WebBanGiayAdidas.Models.Order>
<head>
    <link rel="stylesheet" type="text/css" href="~/assets/styles/categories_styles.css">
</head>
<style>
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .input-group {
        display: flex;
        align-items: center;
    }

        .input-group button {
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
        }
</style>
<div class="container product_section_container">
    <div class="row">
        <div class="col product_section clearfix">

            <!-- Breadcrumbs -->
            <div class="breadcrumbs d-flex flex-row align-items-center">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="ShopCart" asp-action="Index"><i class="fa fa-angle-right" aria-hidden="true"></i>Giỏ hàng</a></li>
                </ul>
            </div>

            <!-- Main Content -->
            <div class="main_content_cart" style="margin:auto ;padding-left:34px;padding-right:34px  ">
                <h2>Đơn hàng của bạn</h2>
<table class="table">
    <thead>
        <tr>
            <th>Mã đơn</th>
            @* <th>Ngày đặt</th> *@
            <th>Số lượng</th>
            <th>Tổng tiền</th>
            @* <th>Trạng thái</th> *@
            <th>Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderCode</td>
                @* <td>@order.OrderDate?.ToString("dd/MM/yyyy")</td> *@
                <td>@order.Quantity</td>
                <td>@order.TotalAmount?.ToString("N0") VNĐ</td>
                @* <td>@order.Status</td> *@
                <td>
                    <a href="@Url.Action("OrderDetail", "ShopCart", new { id = order.Id })">Xem</a>
                </td>
            </tr>
        }
    </tbody>
</table>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        <script src="~/assets/js/categories_custom.js"></script>
        <script src="~/assets/plugins/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}