<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin sản phẩm</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="card-header p-2">
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link active" href="#activity" data-toggle="tab">Thông tin chung</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#timeline" data-toggle="tab">Hình ảnh</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#settings" data-toggle="tab">SEO</a>
                        </li>
                    </ul>
                </div>

                <div class="tab-content p-3" id="tabContent">
                    <!-- Tab 1: Thông tin chung -->
                    <div class="tab-pane fade show active" id="activity">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Tên sản phẩm</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Alias" class="control-label">Alias</label>
                            <input asp-for="Alias" class="form-control" />
                            <span asp-validation-for="Alias" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductCategoryId" class="control-label">Danh mục sản phẩm</label>
                            <select asp-for="ProductCategoryId" class="form-control" asp-items="ViewBag.ProductCategoryId"></select>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProductCode" class="control-label">Mã sản phẩm</label>
                            <input asp-for="ProductCode" class="form-control" />
                            <span asp-validation-for="ProductCode" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Mô tả</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Detail" class="control-label">Chi tiết</label>
                            <textarea asp-for="Detail" class="form-control" id="txtDetail"></textarea>
                            <span asp-validation-for="Detail" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label">Giá cũ</label>
                                    <input type="text" name="Price" class="form-control"
                                           value="@((Model?.Price.HasValue ?? false) ? String.Format("{0:#,##0}", Model.Price).Replace(",", ".") : "")" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="PriceSale" class="control-label">Giá mới</label>
                                    <input type="text" name="PriceSale" class="form-control"
                                           value="@((Model?.PriceSale.HasValue ?? false) ? String.Format("{0:#,##0}", Model.PriceSale).Replace(",", ".") : "")" />
                                    <span asp-validation-for="PriceSale" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    <label asp-for="Quantity" class="control-label">Số lượng</label>
                                    <input asp-for="Quantity" class="form-control" />
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="form-group form-check">
                                    <input class="form-check-input" asp-for="IsActive" />
                                    <label class="form-check-label" asp-for="IsActive">Trạng thái</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group form-check">
                                    <input class="form-check-input" asp-for="IsHome" />
                                    <label class="form-check-label" asp-for="IsHome">Trang chủ</label>
                                </div>
                            </div>

                            <div class="col-3">
                                <div class="form-group form-check">
                                    <input class="form-check-input" asp-for="IsHot" />
                                    <label class="form-check-label" asp-for="IsHot">Hot</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group form-check">
                                    <input class="form-check-input" asp-for="IsFeature" />
                                    <label class="form-check-label" asp-for="IsFeature">Phổ biến</label>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group form-check">
                                    <input class="form-check-input" asp-for="IsSale" />
                                    <label class="form-check-label" asp-for="IsSale">Khuyến mãi</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="CreatedDate" class="control-label">Ngày tạo</label>
                            <input asp-for="CreatedDate" class="form-control" />
                            <span asp-validation-for="CreatedDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreatedBy" class="control-label">Người tạo</label>
                            <input asp-for="CreatedBy" class="form-control" />
                            <span asp-validation-for="CreatedBy" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Tab 2: Hình ảnh -->
                    <div class="tab-pane fade" id="timeline">
                        <div class="form-group">
                            <label for="imageUpload" class="control-label">Ảnh đại diện</label>
                            <div class="input-group">
                                <div class="custom-file">
                                    <input type="file" class="custom-file-input" id="imageUpload" name="imageFile" accept="image/*" />
                                    <label class="custom-file-label" for="imageUpload">Chọn ảnh</label>
                                </div>
                                <div class="input-group-append">
                                    <span class="input-group-text">Tải lên</span>
                                </div>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <img id="previewImage" src="@Model.Image" alt="Ảnh xem trước" style="max-width: 200px; display: block; margin-top: 10px;" />
                            <input asp-for="Image" class="form-control" />
                        }
                        else
                        {
                            <img id="previewImage" src="#" alt="Ảnh xem trước" style="max-width: 200px; display: none; margin-top: 10px;" />
                        }
                        @*                         <div class="form-group">
                        <label>Ảnh mô tả (nhiều ảnh)</label>
                        <input type="file" name="imageChildren" multiple class="form-control" onchange="previewImages(this)" />
                        <div id="preview" class="mt-2"></div>
                        </div> *@
                        <div class="form-group">
                            <div class="d-flex align-items-center justify-content-between mb-2">
                                <label class="mb-0">Ảnh mô tả</label>
                                <!-- Nút Chọn nhiều ảnh -->
                                <button type="button" class="btn btn-outline-success btn-sm" onclick="selectMultipleImages()" title="Chọn nhiều ảnh">
                                    <i class="fas fa-images"></i>
                                </button>
                                <!-- Nút Thêm ảnh -->
                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="addImageInput()" title="Thêm ảnh">
                                    <i class="fas fa-plus"></i>
                                </button>
                            </div>

                            <div id="imageChildrenContainer">
                                @if (ViewBag.ExistingChildImages != null)
                                {
                                    foreach (var image in ViewBag.ExistingChildImages)
                                    {
                                        <div class="input-group mb-2 align-items-center existing-image-wrapper" data-image-id="@image.Id">
                                            <!-- Ảnh preview -->
                                            <img src="@image.ImagePath" class="img-preview mr-2" style="width: 80px; height: 80px; object-fit: cover; border-radius: 4px;" />

                                            <!-- Input file -->
                                            <div class="custom-file">
                                                <input type="file" name="imageChildren" class="custom-file-input" accept="image/*" onchange="updateLabel(this)">
                                                <label class="custom-file-label">Chọn ảnh</label>
                                            </div>

                                            <!-- Nút xoá ảnh -->
                                            <button type="button" class="btn btn-danger btn-sm ml-2" title="Xóa ảnh này" onclick="removeExistingChildImage(this, '@image.Id')">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <!-- Tab 3: SEO -->
                    <div class="tab-pane fade" id="settings">
                        <div class="form-group">
                            <label asp-for="SeoTitle" class="control-label">Tiêu đề SEO</label>
                            <input asp-for="SeoTitle" class="form-control" />
                            <span asp-validation-for="SeoTitle" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeoDescripyion" class="control-label">Mô tả SEO</label>
                            <input asp-for="SeoDescripyion" class="form-control" />
                            <span asp-validation-for="SeoDescripyion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="SeoKeywords" class="control-label">Từ khóa SEO</label>
                            <input asp-for="SeoKeywords" class="form-control" />
                            <span asp-validation-for="SeoKeywords" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-danger">Quay lại</a>
                    <button type="submit" class="btn btn-primary">Sửa</button>
                </div>
            </form>
        </div>
        <!-- /.card-body -->
        @* <div class="card-footer">
        Footer
        </div> *@
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
