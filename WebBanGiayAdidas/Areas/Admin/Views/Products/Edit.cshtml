<script>
    document.getElementById('imageUpload').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            // Hiển thị tên tệp đã chọn
            this.nextElementSibling.innerText = file.name;

            // Xem trước ảnh
            const reader = new FileReader();
            reader.onload = function (e) {
                const preview = document.getElementById('previewImage');
                preview.src = e.target.result;
                preview.style.display = 'block';
            };
            reader.readAsDataURL(file);
        }
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- CKEditor Script -->
    <script src="/ckeditor/ckeditor.js"></script> <!-- đảm bảo đường dẫn đúng -->
    <script>
        $(document).ready(function () {
            CKEDITOR.replace('txtDetail', {
                customConfig: '/ckeditor/config.js',
                extraAllowedContent: 'span' // Cho phép thẻ <span> trong CKEditor
            });
        });

        // Browse Server (CKFinder)
        function BrowseServer(field) {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                document.getElementById(field).value = fileUrl;
                document.getElementById('previewImage').src = fileUrl;
                document.getElementById('previewImage').style.display = 'block';
            };
            finder.popup();
        }
    </script>
    <script>
        function addImageInput() {
            var container = document.getElementById("imageChildrenContainer");

            var inputGroup = document.createElement("div");
            inputGroup.className = "input-group mb-2 align-items-center";

            // Tạo div.custom-file
            var customFileDiv = document.createElement("div");
            customFileDiv.className = "custom-file";

            var input = document.createElement("input");
            input.type = "file";
            input.name = "imageChildren"; // Quan trọng!
            input.className = "custom-file-input";
            input.accept = "image/*";

            var label = document.createElement("label");
            label.className = "custom-file-label";
            label.innerText = "Chọn ảnh";

            // Cập nhật tên file khi chọn
            input.onchange = function () {
                if (input.files.length > 0) {
                    label.innerText = input.files[0].name;
                } else {
                    label.innerText = "Chọn ảnh";
                }
            };

            customFileDiv.appendChild(input);
            customFileDiv.appendChild(label);

            // Thêm ảnh preview mặc định
            var imgPreview = document.createElement("img");
            imgPreview.className = "img-preview mr-2";
            imgPreview.style = "width: 80px; height: 80px; object-fit: cover; border-radius: 4px;";
            imgPreview.src = ""; // Mặc định là rỗng, sẽ được cập nhật sau khi chọn ảnh

            // Nút xóa ảnh
            var removeBtn = document.createElement("button");
            removeBtn.type = "button";
            removeBtn.className = "btn btn-danger btn-sm ml-2";
            removeBtn.innerHTML = '<i class="fas fa-times"></i>';
            removeBtn.title = "Xóa ảnh này";
            removeBtn.onclick = function () {
                container.removeChild(inputGroup);
            };

            inputGroup.appendChild(imgPreview);
            inputGroup.appendChild(customFileDiv);
            inputGroup.appendChild(removeBtn);
            container.appendChild(inputGroup);

            // Cập nhật ảnh preview khi người dùng chọn ảnh
            input.addEventListener("change", function () {
                var reader = new FileReader();
                reader.onload = function (e) {
                    imgPreview.src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            });
        }

        function addImageInputWithFile(file) {
            var container = document.getElementById("imageChildrenContainer");

            var inputGroup = document.createElement("div");
            inputGroup.className = "input-group mb-2 align-items-center";

            var customFileDiv = document.createElement("div");
            customFileDiv.className = "custom-file";

            var input = document.createElement("input");
            input.type = "file";
            input.name = "imageChildren"; // Quan trọng!
            input.className = "custom-file-input";
            input.accept = "image/*";

            const dataTransfer = new DataTransfer();
            dataTransfer.items.add(file);
            input.files = dataTransfer.files;

            var label = document.createElement("label");
            label.className = "custom-file-label";
            label.innerText = file.name;

            input.onchange = function () {
                if (input.files.length > 0) {
                    label.innerText = input.files[0].name;
                } else {
                    label.innerText = "Chọn ảnh";
                }
            };

            customFileDiv.appendChild(input);
            customFileDiv.appendChild(label);

            // Thêm ảnh preview
            var imgPreview = document.createElement("img");
            imgPreview.className = "img-preview mr-2";
            imgPreview.style = "width: 80px; height: 80px; object-fit: cover; border-radius: 4px;";
            imgPreview.src = ""; // Mặc định là rỗng, sẽ được cập nhật sau khi chọn ảnh

            // Nút xóa ảnh
            var removeBtn = document.createElement("button");
            removeBtn.type = "button";
            removeBtn.className = "btn btn-danger btn-sm ml-2";
            removeBtn.innerHTML = '<i class="fas fa-times"></i>';
            removeBtn.title = "Xóa ảnh này";
            removeBtn.onclick = function () {
                container.removeChild(inputGroup);
            };

            inputGroup.appendChild(imgPreview);
            inputGroup.appendChild(customFileDiv);
            inputGroup.appendChild(removeBtn);
            container.appendChild(inputGroup);

            // Hiển thị preview ngay khi ảnh được thêm vào
            var reader = new FileReader();
            reader.onload = function (e) {
                imgPreview.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }

        function selectMultipleImages() {
            var input = document.createElement("input");
            input.type = "file";
            input.accept = "image/*";
            input.multiple = true;
            input.onchange = function () {
                var files = this.files;
                Array.from(files).forEach(file => {
                    addImageInputWithFile(file);
                });
            };
            input.click();
        }

        function showPreview(file, imgElement) {
            if (!file || !imgElement) return;

            const reader = new FileReader();
            reader.onload = function (e) {
                imgElement.src = e.target.result;
            };
            reader.readAsDataURL(file);
        }

        function refreshPreview() {
            var previewContainer = document.getElementById("previewContainer");
            previewContainer.innerHTML = "";

            const inputs = document.querySelectorAll('input[type="file"][name="imageChildren"]');
            inputs.forEach(input => {
                if (input.files && input.files[0]) {
                    showPreview(input.files[0]);
                }
            });
        }
        function removeImageInput(button, imagePath) {
            var container = document.getElementById("imageChildrenContainer");
            container.removeChild(button.parentNode);

            refreshPreview();
        }
        function updateLabel(input) {
            var label = input.nextElementSibling;

            if (input.files && input.files[0]) {
                label.innerText = input.files[0].name;

                // Giữ 1 file duy nhất
                const dataTransfer = new DataTransfer();
                dataTransfer.items.add(input.files[0]);
                input.files = dataTransfer.files;

                var wrapper = input.closest(".existing-image-wrapper");
                if (!wrapper) return;

                var imageId = wrapper.getAttribute("data-image-id");

                // Đổi name input file thành ReplacedChildImages
                input.name = "ReplacedChildImages";

                // Nếu chưa có hidden input ghi id ảnh thay thế, thì thêm vào
                if (!wrapper.querySelector('input[type="hidden"][name="ReplacedImageIds"]')) {
                    var idInput = document.createElement("input");
                    idInput.type = "hidden";
                    idInput.name = "ReplacedImageIds";
                    idInput.value = imageId;
                    wrapper.appendChild(idInput);
                }

                // Không cần thêm vào DeletedChildImageIds nữa
                // Cập nhật ảnh preview tại chỗ
                showPreview(input.files[0], wrapper.querySelector("img.img-preview"));
            } else {
                label.innerText = "Chọn ảnh";
            }
        }
        function removeExistingChildImage(button, imageId) {
            // Ẩn ảnh đang hiển thị
            var wrapper = button.closest(".existing-image-wrapper");
            wrapper.style.display = "none";

            // Tạo input hidden để gửi ID về controller
            var hiddenInput = document.createElement("input");
            hiddenInput.type = "hidden";
            hiddenInput.name = "DeletedChildImageIds";
            hiddenInput.value = imageId;

            // Thêm input vào form (bạn có thể gắn vào imageChildrenContainer hoặc form)
            document.getElementById("imageChildrenContainer").appendChild(hiddenInput);
        }
    </script>
    <script>
        function formatCurrency(input) {
            let value = input.value.replace(/\D/g, '');
            if (value === '') {
                input.value = '';
                return;
            }
            input.value = new Intl.NumberFormat('vi-VN').format(value);
        }

        $(document).ready(function () {
            $('input[name="Price"], input[name="PriceSale"]').on('input', function () {
                formatCurrency(this);
            });
        });
        function removeDot(input) {
            // Bỏ dấu chấm và ký tự không phải số
            return input.value.replace(/\./g, '').replace(/\D/g, '');
        }

        $('form').on('submit', function () {
            $('input[name="Price"], input[name="PriceSale"]').each(function () {
                this.value = removeDot(this);
            });
        });
    </script>
}
