        // Hàm để thêm input ảnh mới (nút Thêm ảnh)
        // Thêm một input file mới kèm preview và nút xóa
        function addImageInput() {
            var container = document.getElementById("imageChildrenContainer");

            var wrapper = document.createElement("div");
            wrapper.className = "input-group mb-2 align-items-center existing-image-wrapper";

            // 1. Ảnh preview (bật lên khi chọn file)
            var img = document.createElement("img");
            img.className = "img-preview mr-2";
            img.style = "width:80px;height:80px;object-fit:cover;border-radius:4px;";
            img.src = ""; // sẽ set khi chọn file

            // 2. div.custom-file + input + label
            var custom = document.createElement("div");
            custom.className = "custom-file";

            var input = document.createElement("input");
            input.type = "file";
            input.name = "imageChildren";
            input.className = "custom-file-input";
            input.accept = "image/*";

            var label = document.createElement("label");
            label.className = "custom-file-label";
            label.innerText = "Chọn ảnh";

            // khi chọn file, cập nhật label và preview
            input.onchange = function () {
                if (!input.files.length) return;
                label.innerText = input.files[0].name;

                var reader = new FileReader();
                reader.onload = function (e) {
                    img.src = e.target.result;
                };
                reader.readAsDataURL(input.files[0]);
            };

            custom.appendChild(input);
            custom.appendChild(label);

            // 3. nút xóa
            var btn = document.createElement("button");
            btn.type = "button";
            btn.className = "btn btn-danger btn-sm ml-2";
            btn.innerHTML = '<i class="fas fa-times"></i>';
            btn.title = "Xóa ảnh này";
            btn.onclick = function () {
                container.removeChild(wrapper);
            };

            // ghép lại
            wrapper.appendChild(img);
            wrapper.appendChild(custom);
            wrapper.appendChild(btn);
            container.appendChild(wrapper);
        }

        // Thêm nhiều file cùng lúc
        function selectMultipleImages() {
            var picker = document.createElement("input");
            picker.type = "file";
            picker.accept = "image/*";
            picker.multiple = true;
            picker.onchange = function () {
                Array.from(picker.files).forEach(file => addImageInputWithFile(file));
            };
            picker.click();
        }

