@model WebBanGiayAdidas.Models.Post

<div class="modal-body">
    <h4>@Model.Title</h4>
    <p><strong>Danh mục:</strong> @Model.Category?.Title</p>
    <img src="@Model.Image" alt="@Model.Title" style="max-width:100%; height:auto;" />
    <p><strong>Mô tả:</strong> @Model.Description</p>
    @* <p><strong>Chi tiết:</strong> @Html.Raw(@Model.Detail)</p> *@
    <p><strong>Trạng thái:</strong> @Html.Raw(Model.IsActive ? "<i class='fa fa-check text-success'></i>" : "<i class='fas fa-times text-danger'></i>")</p>
    <p><strong>Seo Title:</strong> @Model.SeoTitle</p>
    <p><strong>Seo Descripyion:</strong> @Model.SeoDescripyion</p>
    <p><strong>Seo Keywords:</strong> @Model.SeoKeywords</p>
    <p><strong>Ngày tạo:</strong> @Model.CreatedDate?.ToString("dd/MM/yyyy")</p>
    <p><strong>Người tạo:</strong> @Model.CreatedBy</p>
    <p><strong>Ngày sửa:</strong> @Model.ModifierDate?.ToString("dd/MM/yyyy")</p>
    <p><strong>Người sửa:</strong> @Model.ModifierBy</p>
</div>